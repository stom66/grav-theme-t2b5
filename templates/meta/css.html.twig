{% spaceless %}

	{% set theme_config = attribute(config.themes, config.system.pages.theme) %}

	{% block stylesheets %}
		{% if theme_config.use_minified_css == 1 %}
			{% set css_file = 'theme://dist/theme.min.css' %}
		{% else %}
			{% set css_file = 'theme://dist/theme.css' %}
		{% endif %}
		
		{% set version = css_file|filemod|date('YmdHi') %}
		{% do assets.add(css_file ~ '?v=' ~ version, 110) %}

		{% if theme_config.cdn_bootstrap_css %}
			{% do assets.add(
            'https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', {
                integrity: "sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==",
    			crossorigin: "anonymous",
    			priority: 140
    		}) %}
		{% endif %}

		{% if theme_config.cdn_bootstrap_icons_css %}
			{% do assets.add(
            'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css', {
                integrity: "sha512-dPXYcDub/aeb08c63jRq/k6GaKccl256JQy/AnOq7CAnEZ9FzSL9wSbcZkMp4R26vBsMLFYH4kQ67/bbV8XaCQ==",
    			crossorigin: "anonymous",
    			priority: 130
    		}) %}

		{% endif %}

		{% if theme_config.cdn_fontawesome_css_js %}
			{% do assets.add(
    		'https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.6.0/css/fontawesome.min.css', {
    			integrity: "sha512-B46MVOJpI6RBsdcU307elYeStF2JKT87SsHZfRSkjVi4/iZ3912zXi45X5/CBr/GbCyLx6M1GQtTKYRd52Jxgw==",
    			crossorigin: "anonymous",
    			priority: 120
    		}) %}
		{% endif %}

		{% if theme_config.cdn_hover_css %}
			{% do assets.add(
    		'https://cdn.jsdelivr.net/npm/hover.css@2.3.2/css/hover.min.css', {
    			integrity: "sha512-GYVfUMk+0/kRM4vHJA1phR0/fd9onA0WVD2RFOwsDEFnXB68dFEgltbTlB7BrLwfoFTA5frR5fhj80X9Wl6ubg==",
    			crossorigin: "anonymous",
    			priority: 100
    		}) %}
		{% endif %}

		{% if theme_config.cdn_animate_css %}
			{% do assets.add(
    		'https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css', {
    			integrity: "sha512-c42qTSw/wPZ3/5LBzD+Bw5f7bSF2oxou6wEb+I/lqeaKV5FDIfMvvRp772y4jcJLKuGUOpbJMdg/BTl50fJYAw==",
    			crossorigin: "anonymous",
    			priority: 80
    		}) %}
		{% endif %}

		{% if theme_config.cdn_glightbox_css_js %}
			{% do assets.add(
    		'https://cdn.jsdelivr.net/npm/glightbox@3.3.0/dist/css/glightbox.min.css', {
    			integrity: "sha512-T+KoG3fbDoSnlgEXFQqwcTC9AdkFIxhBlmoaFqYaIjq2ShhNwNao9AKaLUPMfwiBPL0ScxAtc+UYbHAgvd+sjQ==",
    			crossorigin: "anonymous",
    			priority: 60
    		}) %}
		{% endif %}


		{% if theme_config.cdn_bootswatch_css and theme_config.cdn_bootswatch_css != "0" %}
			<!-- Loading Bootswatch: {{ theme_config.cdn_bootswatch_css }} -->
			{% include 'meta/bootswatch.html.twig' %}
		{% endif %}

	{% endblock %}

{% endspaceless %}
